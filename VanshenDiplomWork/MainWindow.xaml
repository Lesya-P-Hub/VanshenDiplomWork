<Window x:Class="VanshenDiplomWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VanshenDiplomWork"
        mc:Ignorable="d"
           Title="ВанШэн" Height="600" Width="900"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Icon="\Recources\Icons\png-clipart-tea-company-food-coffee-farm-tea-leaf-logo.png">
    <Grid>
        <Image Source="\Recources\Another\walltea.jpg"
           Stretch="Fill"
           Grid.RowSpan="4"/>
        <Image Source="\Recources\Another\logo.png" />
        <Image Source="\Recources\Another\logoWhite.png" Margin="0,0,16,0" />
        <Button Name="RegistBtn"
            Content="Регистрация"
            Grid.Row="2"
            Height="40"
            Width="200" VerticalAlignment="Bottom"
            Click="RegistBtn_Click"/>
        <Button Name="EnterBtn"
            Content="Войти"
            Grid.Row="3"
            Height="40"
            Width="200"
            Click="EnterBtn_Click"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
    </Grid>
</Window>
