    <Grid>
        <Image Source="/Recources/Another/1664852619_14-podacha-blud-com-p-kitaiskii-chai-molochnii-ulun-foto-14.jpg" Margin="166,174,151,174" />

        <TextBlock Text="№1 из 2" VerticalAlignment="Top" HorizontalAlignment="Center"/>
