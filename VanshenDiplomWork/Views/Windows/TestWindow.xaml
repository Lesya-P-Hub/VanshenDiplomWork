        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,201,112">
            <RadioButton Content="Для вкуса"  Name="Rb1" />
            <RadioButton Content="Для похудения" Name="Rb2"/>
