<Window x:Class="VanshenDiplomWork.Views.Windows.CardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VanshenDiplomWork.Views.Windows"
        mc:Ignorable="d"
            Title="Добавить карту" Height="250" Width="400"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Background="#A9D19F"
    Icon="\Recources\Icons\png-clipart-tea-company-food-coffee-farm-tea-leaf-logo.png">
    <Grid>
        <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <TextBlock Text="Введите номер карты"
                   Margin="0,0,0,10"/>
            <TextBox Name="CardTb"
                 Margin="0,0,0,10" PreviewTextInput="CardTb_PreviewTextInput"/>
            <Button Name="AddBtn"
                Content="Добавить"
                Margin="0,20,0,0" Click="AddBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
